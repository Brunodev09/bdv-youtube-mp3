{
    "compilerOptions": {
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "inlineSourceMap": true,
      "target": "es2017",
      "outDir": "./tsc",
      "module": "commonjs",
      "baseUrl": "./src",
      "typeRoots": [
        "node_modules/@types"
      ]
    },
    "types": [
      "node",
      "reflect-metadata"
    ],
    "include": [
      "node/**/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }